#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void linear_search(int arr[],int n,int key){
    
    int i=0;
    while(i<n && arr[i]!=key){
        i=i+1;
    }
    if(i==n){
        printf("Key not found\n");
    }
    else{
        printf("Element found at position %d",i);
    }
    
}

int main()
{
    clock_t start,end;
    int n,k;
    printf("Enter number of elements\n");
    scanf("%d",&n);
    
    printf("Enter the element to be searched\n");
    scanf("%d",&k);
    
    int arr[n];
    int j=0;
    // // Worst case input for sorting in ascending order
    // for(int i=n;i>=1;i--){
    //     arr[j++]=i;
    // }
    
    
    // incase you want random input type in the following function
    for(int i=0;i<n;i++){
        arr[i]=rand();
    }

    start=clock();
    
    linear_search(arr,n,k);
    
    end=clock();
    
    
    printf("\nTime taken %f \n", difftime(end,start)/CLOCKS_PER_SEC);
    
}
